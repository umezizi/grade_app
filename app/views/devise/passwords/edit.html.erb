<% provide(:title, "PASSWORD RESET") %>

<div class="py-5 bg-light mb-0">
  <div class="row justify-content-center align-items-center w-100">
    <div class="col-md-4 bg-white">
      <div class="form-group text-center mt-3">
        <h2>PASSWORD RESET</h2>
      </div>

      <%= form_for(resource, as: resource_name,
              url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field form-group">
          <%= f.password_field :password, autofocus: true,
                       placeholder:  "新しいパスワード（６文字以上）",
                       class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.password_field :password_confirmation,
                       placeholder:  "新しいパスワードの確認",
                       class: "form-control", autocomplete: "off" %>
        </div>

        <div class="actions form-group mb-2">
          <%= f.submit "パスワード変更", class:"btn-info form-control mb-2" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
