<% provide(:title, "設定") %>

<div class="py-5 bg-light mb-0">
  <div class="row justify-content-center align-items-center w-100">
    <div class="col-md-4 bg-white">
      <div class="form-group text-center mt-3">
        <h2>設定</h2>
      </div>

      <%= form_for(resource, as: resource_name,
           url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true,
                                 class: "form-control", autocomplete: "name" %>
        </div>

        <div class="field form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <%= f.label :プロフィール %><br />
          <%= f.text_field :profile, autocomplete: "profile" %>
        </div>

        <div class="field">
          <%= f.label :プロフィール画像 %><br />
          <%= f.file_field :image %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :新しいパスワード %> <i>(変更しない場合は何も入力しないでください)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.label :新しいパスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.label :現在のパスワード %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "変更", class:"btn-info mb-2" %>
        </div>
      <% end %>


      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    </div>
  </div>
</div>
