<% provide(:title, "SIGN UP") %>

<div class="py-5 bg-light mb-0">
  <div class="row justify-content-center align-items-center w-100">
    <div class="col-md-4 bg-white">
      <div class="form-group text-center mt-3">
        <h2>SIGN UP</h2>
      </div>

      <%= form_for(resource, as: resource_name,
                  url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名",
                               class: "form-control", autocomplete: "name" %>
        </div>

        <div class="field form-group">
          <%= f.email_field :email, placeholder: "メールアドレス",
                               class: "form-control", autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <%= f.password_field :password, placeholder: "パスワード（６文字以上）",
                          class: "form-control" , autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.password_field :password_confirmation, class: "form-control",
              placeholder: "パスワード確認", autocomplete: "new-password" %>
        </div>

        <div class="actions form-group mb-2">
          <%= f.submit "登録する", class:"btn-info form-control mb-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
