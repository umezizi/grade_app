<% provide(:title, "GYM EDIT") %>

<div class="py-5 bg-light mb-0">
  <div class="row justify-content-center align-items-center w-100">
    <div class="col-md-4 bg-white">
      <div class="form-group text-center mt-3">
        <h2>GYM EDIT</h2>
      </div>
      <div class="form-group text-center mt-3">
        <% if @gym.gym_image.attached? %>
          <%= image_tag @gym.gym_image_resize("300x200") %>
        <% else %>
          <%= image_tag("gym_image.jpg", :size => "300x200") %>
        <% end %>
      </div>

      <%= form_for(@gym, url: gym_path) do |f| %>

        <div class="field form-group">
          <%= f.label :ジム名 %>
          <%= f.text_field :gym_name, autofocus: true, class: "form-control",
                                                       autocomplete: "name" %>
        </div>

        <div class="field form-group">
          <%= f.label :都道府県 %>
          <%= f.collection_select :prefecture, JpPrefecture::Prefecture.all,
               :name, :name, {autocomplete: "on"}, {class: "custom-select"} %>
        </div>

        <div class="field form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control",
                                                       autocomplete: "address" %>
        </div>

        <div class="field form-group">
          <%= f.label :備考 %>
          <%= f.text_area :details, class: "form-control",
                                                       autocomplete: "details" %>
        </div>

        <div class="field form-group">
          <%= f.label :ジム画像 %>
          <%= f.file_field :gym_image, class: "form-control-file" %>
        </div>

        <div class="actions form-group mb-2">
          <%= f.submit "ジムを更新する", class:"btn-info form-control mb-2" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
