<% provide(:title, "GradeShare") %>
<h1>gym index</h1>
<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Album example</h1>
    <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
    <p>
      <a href="#" class="btn btn-primary my-2">Main call to action</a>
      <a href="#" class="btn btn-secondary my-2">Secondary action</a>
    </p>
    <p>
    <%= search_form_for(@q, url:gyms_path) do |f| %>
      <%= f.search_field :gym_name_cont, class: "form-control mr-sm-2", placeholder: "ジムを検索..."  %>
      <%= f.submit class: "btn btn-danger my-2 my-sm-0 search-btn" %>
    <% end %>
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      <% @gyms.each do |gym| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <% if gym.gym_image.attached? %>
              <%= link_to image_tag(gym.gym_image_resize("300x300"), class: "card-img-top"), gym_path(gym) %>
            <% else %>
              <%= link_to image_tag("gym_image.jpg", :size => "300x300", class: "card-img-top"), gym_path(gym) %>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= gym.gym_name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">レビュー数</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @gyms %>
  </div>
</div>
